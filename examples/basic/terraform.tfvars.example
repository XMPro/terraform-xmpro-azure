# Example terraform.tfvars for Basic XMPro Platform deployment
# Copy this file to terraform.tfvars and customize the values for your environment

# ==========================================
# QUICK START - Essential settings (required)
# ==========================================

# Core platform settings
location = "eastus"                           # Azure region (e.g., eastus, westus2, westeurope)
company_name = "mycompany"                    # Your company name (must be unique)

# Database credentials - IMPORTANT: Don't change these after deployment!
db_admin_username = "xmadmin"                 # Database admin username
db_admin_password = "YourStrongPassword123!"  # Database admin password

# Application passwords
site_admin_password = "YourStrongSitePassword123!"      # Super admin password
company_admin_password = "YourStrongAdminPassword123!"  # Company admin password

# Company administrator details
company_admin_email_address = "admin@mycompany.com"     # Your email address
company_admin_first_name = "John"                       # Your first name
company_admin_last_name = "Doe"                         # Your last name

# Evaluation mode - Set to true for testing/demo (includes licenses)
is_evaluation_mode = true

# ==========================================
# OPTIONAL - Advanced settings
# ==========================================

# Environment name (default: "dev")
environment = "dev"

# Container registry settings (defaults to public XMPro registry)
acr_url_product = "xmpro.azurecr.io"
imageversion = "4.5.3"
# is_private_registry = false  # Set to true if using private registry
# acr_username = ""            # Only needed for private registry
# acr_password = ""            # Only needed for private registry

# DNS configuration (optional)
enable_custom_domain = false
# If enable_custom_domain = true, also set:
# dns_zone_name = "mycompany.com"
# use_existing_dns_zone = true

# SMTP configuration for email notifications (optional)
# Note: Email notifications are disabled by default for conservative deployment
# To enable email notifications, uncomment the following lines:
# enable_email_notification = true
# smtp_server = "smtp.office365.com"
# smtp_port = 587
# smtp_from_address = "notifications@mycompany.com"
# smtp_username = "notifications@mycompany.com"
# smtp_password = "your-smtp-password-here"
# smtp_enable_ssl = true

# Security Headers Configuration (optional)
# Enable security headers for AD and DS applications (enabled by default)
# enable_security_headers = true

# Evaluation mode (optional)
# Set to true to enable built-in license provisioning for evaluation/demo
# is_evaluation_mode = true

# Database Configuration (optional) - Advanced tuning
# db_sku_name = "Basic"  # Options: Basic, S0, S1, S2, S3, P1, P2, P4
# db_max_size_gb = 2  # Maximum database size in GB (min: 1 for Basic, varies by SKU)
# db_collation = "SQL_Latin1_General_CP1_CI_AS"  # SQL collation for databases
# db_zone_redundant = false  # Enable zone redundancy for high availability
# db_allow_all_ips = false  # Set to true to allow all IPs (less secure)
# create_local_firewall_rule = false  # Set to true to add your current IP to firewall

# Service Plan SKUs (optional) - Customize compute resources
# ad_service_plan_sku = "B1"  # Options: B1, B2, B3, S1, S2, S3, P1v2, P2v2, P3v2, P1v3, P2v3, P3v3
# ds_service_plan_sku = "B1"
# sm_service_plan_sku = "B1"

# Stream Host Configuration (optional) - Customize container resources
# stream_host_cpu = 2      # CPU cores
# stream_host_memory = 4   # Memory in GB
# stream_host_environment_variables = {
#   "CUSTOM_ENV_VAR" = "value"
# }

# Additional optional features
# See variables.tf for complete list of available configuration options

# Note: Custom SSL certificates not currently supported
# Azure managed certificates are used automatically